<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UnusedAttribute">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgColorPicker"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="@dimen/paddingAllLayout"
            android:layout_marginRight="@dimen/paddingAllLayout"
            app:layout_constraintBottom_toBottomOf="@+id/title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/title"
            app:srcCompat="@drawable/ic_color_picker" />

        <ir.amozkade.advancedAsisstiveTouche.helper.customviews.CircleColor
            android:id="@+id/selectedColorCircle"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imgColorPicker"
            app:layout_constraintStart_toStartOf="@+id/imgColorPicker"
            app:layout_constraintTop_toBottomOf="@+id/imgColorPicker" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            style="@style/heavy_font_family"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/paddingAllLayout2X"
            android:layout_marginLeft="@dimen/paddingAllLayout2X"
            android:layout_marginTop="@dimen/paddingAllLayout"
            android:layout_marginEnd="@dimen/paddingAllLayout2X"
            android:layout_marginRight="@dimen/paddingAllLayout2X"
            android:textColor="@color/white_darker_3X"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/imgColorPicker"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Title" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/subTitle"
            style="@style/medium_font_family"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/paddingAllLayout2X"
            android:layout_marginLeft="@dimen/paddingAllLayout2X"
            android:layout_marginTop="@dimen/paddingAllLayout"
            android:layout_marginBottom="@dimen/paddingAllLayout"
            android:textColor="@color/white_darker_2X"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            tools:text="Title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
