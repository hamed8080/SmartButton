<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UnusedAttribute">

        <ir.amozkade.advancedAsisstiveTouche.helper.customviews.CustomSwitch
            android:id="@+id/sw"
            android:layout_width="68dp"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/paddingAllLayout"
            android:layout_marginEnd="@dimen/paddingAllLayout"
            android:layout_marginRight="@dimen/paddingAllLayout"
            app:custom_switch_is_checked="false"
            app:layout_constraintBottom_toBottomOf="@+id/title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            style="@style/heavy_font_family"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/paddingAllLayout2X"
            android:layout_marginLeft="@dimen/paddingAllLayout2X"
            android:layout_marginTop="@dimen/paddingAllLayout"
            android:gravity="top"
            android:textColor="@color/white_darker_3X"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/sw"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Title" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sub_title"
            style="@style/medium_font_family"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/paddingAllLayout2X"
            android:layout_marginLeft="@dimen/paddingAllLayout2X"
            android:layout_marginTop="4dp"
            android:textColor="@color/white_darker_2X"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/sw"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/paddingAllLayout"
            app:layout_constraintTop_toBottomOf="@+id/title"
            tools:ignore="SmallSp"
            tools:text="subtitle" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
